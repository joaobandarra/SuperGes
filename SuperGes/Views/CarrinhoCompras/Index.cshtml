@model IEnumerable<SuperGes.Models.CarrinhoCompras>

@{
    ViewBag.Title = "Index";
}

<h2>Carrinho de Compras</h2>
<br/>
@Html.Partial("../Shared/BarraLateralB")
<br/>

<p>
    <div class="btn btn-default">@Html.ActionLink("Criar novo", "Create", new { @class = "letraBotao" })</div>
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Cliente.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DataAdicaoProduto)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Cliente.Nome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DataAdicaoProduto)
        </td>
        <td>
            <div class="btn btn-warning"> @Html.ActionLink("Editar", "Edit", new { id = item.IDCarrinhoCompras }, new { @class = "letraBotao" })</div>|
            <div class="btn btn-success"> @Html.ActionLink("Detalhes", "Details", new { id = item.IDCarrinhoCompras }, new { @class = "letraBotao" })</div>|
            <div class="btn btn-danger"> @Html.ActionLink("Eliminar", "Delete", new { id = item.IDCarrinhoCompras }, new { @class = "letraBotao" })</div>
        </td>
    </tr>
}

</table>
